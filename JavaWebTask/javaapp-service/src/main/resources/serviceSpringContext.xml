<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	                      http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="classpath:daoSpringContext.xml"/>

    <bean id="employeeService" class="com.epam.service.employee.EmployeeServiceImpl"/>

    <bean id="departmentService" class="com.epam.service.department.DepartmentServiceImpl" />

    <bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="dataSource" />
    </bean>

</beans>