<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	                      http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="classpath:testContext.xml"/>

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:database.properties</value>
            </list>
        </property>
    </bean>

    <bean id="employeeService" class="com.epam.service.employee.EmployeeServiceImpl"/>
    <bean id="departmentService" class="com.epam.service.department.DepartmentServiceImpl" />

    <bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <constructor-arg ref="dataSource"/>
    </bean>

    <!--<bean id="employeeValidator" class="validators.EmployeeValidator" />
    <bean id="departmentValidator" class="validators.DepartmentValidator" />-->

</beans>